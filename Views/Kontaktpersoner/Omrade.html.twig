{% extends "UKMDesign/Layout/base.html.twig"|UKMpath %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h3>Kontaktpersoner for
					{{ omrade.getNavn() }}</h3>
			</div>
			{% for kontakt in omrade.getKontaktpersoner().getAll() %}
				<div class="col-12 col-sm-6 col-lg-4 col-xl-3">
					{% embed "Kontaktpersoner/grid.html.twig"|UKMpath %}{% endembed %}
				</div>
			{% else %}
				<div class="col-12">
					<p>
						Vi har ikke kontaktinformasjon for
						{{ omrade.getNavn() }}
						enda.
						Vi jobber med å skaffe det, så du må gjerne prøve igjen om noen dager.
					</p>
				</div>
			{% endfor %}
		</div>
		<div class="clearfix my-3"></div>
		<div class="row">
			<div class="col-12">
				<p>
					<a href="{{ omrade.getLink() }}">Tilbake til
						{{ omrade.getNavn() }}</a>
				</p>
			</div>
		</div>
	</div>
{% endblock %}
