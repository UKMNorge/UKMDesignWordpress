{% extends "Page/Fullpage.html.twig"|UKMpath %}

{% block content %}
	<div class="container clearfix">
		<div class="row">
			<div class="col-12 col-lg-7 float-lg-left mb-5">
				{% if infoside is defined %}
					{% include "Front/Part/Infoside.html.twig" %}
				{% endif %}
				<div class="mt-4">
					{% include "Fylke/VelgKommune.html.twig" %}
				</div>
			</div>

			<div class="col-12 col-md-6 float-md-right order-md-2 order-lg-1 col-lg-4 offset-lg-1 float-lg-right mb-5">
				{% if omrade.getArrangementer(season).getAntall() > 0 %}
					<h3 class="mb-3 mt-0">Ting som skjer
						<small>(etter UKM lokalt)</small>
					</h3>
					{% include "Front/Part/ArrangementListe.html.twig" %}
                    <div class="clearfix"></div>
                    <div class="mb-5"></div>
				{% endif %}

				<div class="mt-4">
					{% include "Front/Part/Kontakt.html.twig" with { kontakpersoner: omrade.getKontaktpersoner() } %}
				</div>
			</div>

			{% if posts is defined and posts.getAntall() > 0 %}
				<div class="col-12 col-md-6 order-md-1 col-lg-12">
					<h3 class="mb-3 mt-0">Nyheter fra UKM
						{{ omrade.getNavn() }}</h3>
					<div class="row">
						{% for post in posts.getAll()|slice(0,4) %}
							<div class="col-6 col-lg-3">
								{% embed "Post/Grid-default.html.twig"|UKMpath with { post: post } %}{% endembed %}
							</div>
						{% endfor %}
					</div>
				</div>
				<div class="col-12 order-md-4 mb-5">
					<div class="row">
						{% for post in posts.getAll()|slice(4) %}
							<div class="col-6 col-md-3">
								{% embed "Post/Grid-default.html.twig"|UKMpath with { post: post } %}{% endembed %}
							</div>
						{% endfor %}
					</div>
					{% embed "Kategori/Pagination.html.twig"|UKMpath %}{% endembed %}
				</div>
			{% endif %}
		</div>
		<div class="clearfix"></div>
		<div class="row">
			<div class="col-12 col-md-12 mb-5">
				{% include "Front/Part/HvaEr.html.twig" %}
			</div>
		</div>
	</div>
{% endblock %}
