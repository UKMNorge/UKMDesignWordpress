    }
    .side .left-down-text .buttons a {
        margin-right: 25px;
    }
    .side .left-down-text .buttons a span {
        font-size: 18px;
    }
    .side .left-down-text .buttons a.empty-style {
        background: transparent;
        border: solid 4px #4165f3;
    }
    .side .left-down-text .buttons a.empty-style:hover {
