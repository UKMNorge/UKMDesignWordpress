                        <span>Nora Nordhus</span>
                    </div>
                </div>
            </div>
        </div>
        {# END - Right #}

    </div>


    <style>
        .program-enkel-visning-header {
            background: #272e48;
            padding: 100px 0;
        }
        .point {
            height: auto;
            min-height: 300px;
            padding: 30px;
            display: flex;
        }
        .point:nth-child(odd) {
            border-right: 1px dashed #4b546f;
        }
        .point:nth-child(even) {
            border-left: 1px dashed #4b546f;
        }
        .point .box-innslag {
            position: relative;
            height: auto;
            width: 100%;
            max-width: 400px;
            min-height: 100px;
            margin: auto;
            border-radius: 5px;
            background: #1a233a;
            padding: 20px;
            color: #fff;
        }
        .point .box-innslag::after {
            position: absolute;
            content: url("data:image/svg+xml; utf8, <svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' style='fill: rgb(26, 35, 58); transform: ;msFilter:;'><path d='m4.431 12.822 13 9A1 1 0 0 0 19 21V3a1 1 0 0 0-1.569-.823l-13 9a1.003 1.003 0 0 0 0 1.645z'></path></svg>");
            height: 10px;
            width: 10px;
            top: 13px;
        }
        .point:nth-child(even) .box-innslag::after {
            left: -15px;
        }
        .point:nth-child(odd) .box-innslag::after {
            left: auto;
            right: 0;
            margin-right: -15px;
            transform: rotate(180deg);
            top: 25px;
        }
        .point:nth-child(even) .box-innslag {
            margin-left: 0;
        }
        .point:nth-child(odd) .box-innslag {
            margin-right: 0;
        }
        .point .box-innslag .timeline-point {
                height: 25px;
                width: 25px;
                background: #272e48 !important;
                position: absolute;
                top: 10px;
                left: -44px;
                border-radius: 50%;
                border: dashed 2px #4b546f;
                z-index: 1;
        }
        .point:nth-child(odd) .box-innslag .timeline-point {
            left: auto;
            right: -44px;
        }
        
        .point .box-innslag .time {
            position: absolute;
            right: -260px;
            top: 12px;
            width: 200px;
        }
        .point:nth-child(even) .box-innslag .time {
            right: auto;
            left: -260px;
            text-align: right;
        }
        .deltakere {
            margin-top: 20px;
        }
        .innslag-type {
            padding: 5px 10px;
            width: 100%;
            background: #fff;
            color: #272e48;
            border-radius: 10px;
        }
    </style>
