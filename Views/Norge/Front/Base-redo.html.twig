{% extends "UKMDesign/Layout/framework.html.twig"|UKMpath %}

{% block css %}
	{{parent()}}
	<style>
		html {
			background: #f9f9f9;
        }
        body {
            font-size: 14px;
        }
        p{
            opacity: .85;
        }
		.semibold {
			font-weight: 500;
        }
        
        #UKMheader {
            background-image: url('https://ukm.dev/wp-content/themes/UKMDesignWordpress/Public/topp.png');
            background-repeat: no-repeat;
            background-size: cover;
            background-position-y: bottom;
            min-height: 20vh;
        }

        #UKMlogo {
            width: 5.5em;
        }
        
	</style>
{% endblock %}

{% block framework_content %}
	{# NAVBAR MINI #}
	<div class="container-fluid" id="UKMheader">
		<header>
            <div class="navbar-header float-left">
                <a href="{{ UKMDesign.getSitemap().getPage('UKM', 'forsiden') }}">
                    <img src="https://grafikk.ukm.no/profil/bobla/UKM-bobla_bla_0300.png" id="UKMlogo" />
                </a>
			</div>

			<div class="float-right">
				<a href="//{{ UKM_HOSTNAME }}/hovedmeny/">
					<button type="button" class="btn btn-sm my-2 btn-outline-light" id="main_menu_button" data-status="hidden">MENY</button>
				</a>
			</div>
			<div class="clearfix"></div>
		</header>
	</div>

	{# SITEMAP #}
	<div
		class="container-fluid" id="UKMDesign_sitemap" style="display:none;">
		{#% embed "UKMDesign/Mobil/UKMMobil.html.twig"|UKMpath %}{% endembed %#}
		{% block sectionNav %}{% endblock %}
		{% embed "UKMDesign/Layout/nav.html.twig"|UKMpath with {'hidden': true} %}{% endembed %}
	</div>

	{# CONTENT #}
	<div id="UKMDesign_content">
		{% block content %}Designfil mangler content-block.
		{% endblock %}
	</div>

	{# FOOTER #}
	{% embed "UKMDesign/Layout/footer.html.twig"|UKMpath %}{% endembed %}
{% endblock %}
