<div class="container testimonial">
    <div class="row" id="testimonial">
        {% set post = testimonial.getAll()|first %}
        <div class="col col-xs-1 col-sm-5 p-0">
            <div class="side-pic" style="overflow-x: hidden; background: url('{{ post.image.medium.src }}') no-repeat center/cover;"></div>
        </div>
        <div class="col col-lg-6 col-xl-6 offset-lg-1 offset-xl-0">
