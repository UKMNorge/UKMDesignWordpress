            </svg>
            <h2 class="signature-text">{{ post.lead }}</h2>
            <span class="signature">- {{ post.getTitle() }} {#({{ post.getMeta('Alder')}})#} fra {{ post.getMeta('Kommune')}}</span>
        </div>
    </div>
    
    {# Bildegalleri #}
    <div class="people-carousel">
        <ul class="testimonial-items list-group list-group-horizontal">
            {% for post in testimonial.getAll() %}
            <li class="some-item list-group-item">
                <a aria-label="">
                    <div
                        data-img="{{ post.image.medium.src }}"
                        data-text="{{ post.lead }}" 
                        data-signature="- {{ post.title }} {#({{ post.getMeta('Alder')}})#} fra {{ post.getMeta('Kommune')}}" 
                        class="img-carousel img-carousel-people img-carousel-square testimonial-small" 
                        style="background: url('{{ post.image.medium.src }}') no-repeat center/cover;">
                    </div>
                </a>
            </li>
            {% endfor %}
        </ul>
    </div>
</div>