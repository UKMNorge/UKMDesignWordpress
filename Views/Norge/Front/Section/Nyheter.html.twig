<div class="container news-section">
    <div class="row">
        <div class="mt-5 mb-3 col d-flex justify-content-center">
            <span class="undertitler undertitler-news">Nyheter fra UKM Norge</span>
        </div>
    </div> 
    <div class="row">
        <div class="col-12 col-md-6 col-xl-6 bottom-buffer">
            {% set main_post = posts.getAll()|first %}
            <a class="card-news" href="{{main_post.getUrl()}}">
                <div class="ukm-card ukm-card-front ukm-card-front-main">
                    <div class="row card-element">
                        {% if main_post.image.medium.src is not defined %}
                            <img class="card-image" src="//assets.{{ UKM_HOSTNAME }}/img/bilde.png" />
                        {% else %}
                            <div class="card-image" style="background: url('{{ main_post.getFeaturedImage().getUrl() }}') no-repeat center/cover;"></div>
                        {% endif %}
                    </div>
                    <div class="row card-element d-flex flex-wrap align-items-center card-news">
                        <span>{{ post.getCategories() is empty ? 'ukategorisert' : post.getCategories() }}</span>
                        <span>{{ main_post.getTitle() }}</span>
                        <p class="truncate-overflow">{{ main_post.lead }}</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-12 col-md-6 col-xl-6">
            <div class="row">
                {% for post in posts.getAll()|slice(1, 3) %}
                <a class="col-12 bottom-buffer card-news" href="{{post.getUrl()}}">
                    <div class="ukm-card ukm-card-front col-12">
                        <div class="row card-element">
                            <div class="col-xs-1 d-flex flex-wrap align-items-center">
                                <div class="card-image-small" style="background: url('{{ post.getFeaturedImage().getUrl() }}') no-repeat center/cover;"> </div>
                            </div>
                            <div class="col pr-1 d-flex flex-wrap align-items-center">
                                <span>{{ post.getCategories() is empty ? 'ukategorisert' : post.getCategories() }}</span>
                                <span>{{ post.getTitle() }}</span>
                                <p class="truncate-overflow">{{ post.lead }}</p>
                            </div>
                        </div>
                    </div>
                </a>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col d-flex justify-content-center mt-2">
            <a href="//liker.{{UKM_HOSTNAME}}" class="ukm-button btn-text ukm-button-secondary">
                <span>Les flere nyheter</span>
        {% include "UKMDesign/SVG/ChevronBlue.html.twig"%}

            </a>
        </div>
    </div>
</div>