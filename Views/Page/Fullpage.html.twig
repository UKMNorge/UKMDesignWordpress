{% extends "UKMDesign/Page/Page.html.twig"|UKMpath %}

{% block page_image %}
	{% embed "Page/TopImage.html.twig"|UKMpath %}{% endembed %}
{% endblock %}

{% block page_content %}
	<article>
		{% include "Page/Title.html.twig" %} 
		{{ page.content|raw }}
	</article>
{% endblock %}

{% block page_blocks %}
	{% if page.hasPageBlocks() %}
		{% for section in page.getPageBlocks().getAll() %}
			{% embed ("UKMDesign/PageBlock/"~ section.getTemplate() ~".html.twig")|UKMpath with{ block: section } %}{% endembed %}
		{% endfor %}
	{% endif %}
{% endblock %}
